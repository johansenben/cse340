<link rel="stylesheet" href="/css/account/update.css">
<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
<%  }) %>
    </ul>
<% } %>
<h2>Update Account Information</h2>
<form action="/account/update" method="post">
    <label for="account_firstname">First Name</label>
    <input type="text" name="account_firstname" id="account_firstname" required value="<%= locals.account_firstname %>">
    <label for="account_lastname">Last Name</label>
    <input type="text" name="account_lastname" id="account_lastname" required value="<%= locals.account_lastname %>">

    <label for="account_email">Email</label>
    <input type="email" name="account_email" id="account_email" required placeholder="Enter a valid email address" value="<%= locals.account_email %>">
    
    <button type="submit">Update Account</button>
    <input type="hidden" name="account_id" id="account_id" value="<%= locals.account_id %>">
</form>
<h2>Change Password</h2>
<form action="/account/change-password" method="post">
    <p class="password-requirement">*Password must include at least 12 characters, 1 capital, 1 number and 1 special character</p>
    <label for="account_password">Password</label>
    <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <label for="confirm_password">Confirm Password</label>
    <input type="password" name="confirm_password" id="confirm_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <button type="submit">Change Password</button>
    <p class="info">*Old password won't work</p>
    <input type="hidden" name="account_id" id="account_id_pw" value="<%= locals.account_id %>">
</form>
<h2>Delete Account</h2>
<p>*Warning: Account cannot be recovered after being deleted!</p>
<a href="/account/delete-account">Delete Account</a>