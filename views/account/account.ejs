<link rel="stylesheet" href="/css/account/account.css">
<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
<%  }) %>
    </ul>
<% } %>
<h2>Welcome, <%= locals.accountData.account_firstname %></h2>
<h3>Update Account Data</h3>
<a href="/account/update">Update Account Data</a>
<% if (locals.accountData.account_type == "Employee" || locals.accountData.account_type == "Admin") {%>
    <h3>Inventory Management</h3>
    <a href="/inv">Manage Inventory</a>
<% } %>
