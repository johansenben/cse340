<link rel="stylesheet" href="/css/inventory/delete-confirm.css">
<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
<%  }) %>
    </ul>
<% } %>
<form action="/inv/delete" method="post">
    <label>Make: <input type="text" name="inv_make" id="inv_make" required value="<%= locals.inv_make %>" readonly></label>
    <label>Model: <input type="text" name="inv_model" id="inv_model" required value="<%= locals.inv_model %>" readonly></label>
    <label>Year: <input type="number" name="inv_year" id="inv_year" required pattern="^[0-9]{4}$" value="<%= locals.inv_year %>" readonly></label>
    <label>Price: <input type="number" name="inv_price" id="inv_price" required pattern="^[0-9]+$" value="<%= locals.inv_price %>" min="0" readonly></label>
    <button type="submit">Delete Vehicle</button>
    <p class="info">*Delete is Permanent</p>
    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"<% } %>>
</form>
